<h1> Recipe Finder </h1>
<h2> Searching for - <%= @search %> </h2>

<table border="1">
	<tr>
		<th>Image</th>
		<th>Name</th>
		<th>Social Rank</th>
	</tr>
	<% @results.each do |recipe| %>
		<tr>
			<td><%= link_to "#{image_tag(recipe["image_url"], height:'100', width:'100')}", "#{recipe["source_url]}"  %></td>
			<td><%= lilnk_to "#{recipe["title"]}", "#{recipe["source_url"]}" %></td>
			<td><%= recipe["social_rank"] %></td> 
		</tr>
	<% end %>
</table>


