<h1> Recipe Finder </h1>
<h2> Searching for - <%= @search_term %> </h2>

<table border="1">
	<tr>
		<th>Image</th>
		<th>Name</th>
		<th>Social Rank</th>
	</tr>
	<% @results.each do |recipe| %>
		<tr>
			<td><%= link_to image_tag(recipe["image_url"], :size => "100x100") %></td>
			<td><%= link_to raw(recipe["title"]), recipe["f2f_url"] %></td>
			<td><%= recipe["social_rank"] %></td> 
		</tr>
	<% end %>
</table>

<p>Powered By Food2Fork.com</p>


